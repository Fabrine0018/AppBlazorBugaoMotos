@page "/CadastroCliente"

<div class="container-md pt-3">
<div class="breadcrumb ">
    <a href="#">Home</a> > <a href="#">Cadastrar: Cliente</a>
</div>
<div class="border p-4 rounded">

<div class="border-left">
    <h3>Cadastro do cliente</h3>
    <p>Preencha todas as informações corretamente</p>
</div>



<input type="text" placeholder="Nome">

       


<div class="row">
    <div><input type="text" placeholder="Telefone"></div>
    <div><input type="text" placeholder="CPF"></div>
</div>

<div class="divider"></div>

<div class="row-3">
    <div><input type="text" placeholder="CEP"></div>
    <div>
        <select>
            <option disabled selected>Estado</option>
        </select>
    </div>
    <div>
        <select>
            <option disabled selected>Cidade</option>
        </select>
    </div>
</div>

<div class="row">
    <div><input type="text" placeholder="Rua"></div>
    <div><input type="text" placeholder="Bairro"></div>
</div>

<textarea rows="4" placeholder="Complemento"></textarea>

<div class="buttons">
            <button class="btn-salvar">Salvar</button>
            <button class="btn-deletar">Deletar</button>

</div>
</div>
</div>

