@page "/CadastroFornecedor"

<div class="container-md pt-3">
    <div class="breadcrumb">
        <a href="#">Home</a> > <a href="#">Cadastrar: Fornecedor</a>
    </div>
    <div class="border p-4 rounded">
        <h2>Cadastro do fornecedor</h2>
        <p>Preencha todas as informações corretamente</p>

        <input type="text" placeholder="Nome">

        <div class="row">
            <div><input type="text" placeholder="Telefone"></div>
            <div><input type="text" placeholder="CNPJ"></div>

            <div><input type="text" placeholder="N casa/apto"></div>
            <div><input type="text" placeholder="Estado"></div>
            <div><input type="text" placeholder="Cidade"></div>

            <div><input type="text" placeholder="Responsável"></div>
            <div><input type="text" placeholder="Razão Social"></div>
        </div>

        <div class="divider"></div>

        <div class="row-3">
            <div><input type="text" placeholder="CEP"></div>
            <div>
                <select>
                    <option disabled selected>Estado</option>
                </select>
            </div>
            <div>
                <select>
                    <option disabled selected>Cidade</option>
                </select>
            </div>
        </div>

        <div class="row">
            <div><input type="text" placeholder="Rua"></div>
            <div><input type="text" placeholder="Bairro"></div>
        </div>

        <textarea rows="4" placeholder="Complemento"></textarea>

        <div class="buttons">
            <button class="btn-salvar">SALVAR</button>
            <button class="btn-deletar">Deletar</button>
        </div>
    </div>
</div>
