@page "/CadastroFornecedor"
@rendermode InteractiveServer

@using AppBugaoMotoFVLE.Models;
@inject FornecedorDAO fornecedorDAO;
@inject NavigationManager Navigation;

<div class="border p-4 rounded">
    <div class="breadcrumb ">
        <a href="#">Home</a> > <a href="#">Cadastrar: Fornecedor</a>
    </div>
    <div class="border-left">
        <h3>Cadastro do fornecedor</h3>
        <p>Preencha todas as informações corretamente</p>
    </div>
    <!-- adicionar @bind-value="_novoFornecedor!.Nome" em cada atributo-->
    <input type="text" placeholder="Nome">

    <div class="row">
        <div><input type="text" placeholder="Telefone"></div>
        <div><input type="text" placeholder="CNPJ"></div>
        <div><input type="text" placeholder="N casa/apto"></div>
        <div><input type="text" placeholder="Responsável"></div>
        <div><input type="text" placeholder="Razão Social"></div>
    </div>

    <div class="divider"></div>

    <div class="row-3">
        <div><input type="text" placeholder="CEP"></div>
        <div>
            <select>
                <option disabled selected>Estado</option>
            </select>
        </div>
        <div>
            <select>
                <option disabled selected>Cidade</option>
            </select>
        </div>
    </div>

    <div class="row">
        <div><input type="text" placeholder="Rua"></div>
        <div><input type="text" placeholder="Bairro"></div>
    </div>

    <textarea rows="4" placeholder="Complemento"></textarea>

    <div class="buttons">
        <button class="btn-salvar">Salvar</button>
        <button class="btn-deletar">Deletar</button>
    </div>
</div>

@code {
    private string? erro = null;
    [SupplyParameterFromForm]
    private Fornecedor? _novoFornecedor { get; set; } = new Fornecedor();

    private void Salvar() {
        try{
            if (_novoFornecedor.CNPJ is null || _novoFornecedor.CNPJ == "") {
                throw new Exception("O campo CNPJ é obrigatório");
            }
            fornecedorDAO.InserirFornecedor(_novoFornecedor);
            Navigation.NavigateTo("/ConsultaFornecedor");
        } catch(Exception ex) {
            erro = ex.Message;
        }
    }
}