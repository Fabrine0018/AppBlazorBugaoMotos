@page "/CadastroServico"
<div class="container-md pt-3">
    <div class="breadcrumb">
        <a href="#">Home</a> > <a href="#">Cadastrar: Serviço</a>
    </div>
    <div class="border p-4 rounded">
        <div class="border-left">
            <h3>Cadastro do serviço</h3>
            <p>Preencha todas as informações corretamente</p>
        </div>
        <input type="text" placeholder="Nome do serviço">
        <div class="row">
            <div><input type="text" placeholder="Código"></div>
            <div><input type="text" placeholder="Prestador"></div>
            <div><input type="text" placeholder="Valor do Serviço"></div>
        </div>
        <textarea rows="4" placeholder="Descrição"></textarea>
        <div class="buttons">
            <button class="btn-salvar">Salvar</button>
            <button class="btn-deletar">Deletar</button>
        </div>
    </div>
</div>
